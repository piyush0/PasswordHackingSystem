<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_password_guessing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.piyush.passwordhackingsystem.activities.PasswordGuessingActivity">

    <TextView
        android:text="Estimated time for Brute Force : "
        android:id="@+id/activity_password_guessing_tv_etaIS"
        android:layout_width="wrap_content"
        android:textSize="20sp"

        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_password_guessing_tv_password"
        android:text="Searching..."
        android:textSize="20sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/activity_password_guessing_tv_passwordIs"
        android:layout_alignBottom="@+id/activity_password_guessing_tv_passwordIs"
        android:layout_toRightOf="@+id/activity_password_guessing_tv_passwordIs"
        android:layout_toEndOf="@+id/activity_password_guessing_tv_passwordIs"
        android:layout_marginLeft="15dp"

        android:layout_marginStart="15dp" />

    <TextView
        android:text="Your Password is : "
        android:textSize="20sp"

        android:id="@+id/activity_password_guessing_tv_passwordIs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_password_guessing_btn_dictionary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:minHeight="20dip"
        android:maxHeight="20dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/greenprogress"
        android:layout_below="@+id/activity_password_guessing_tv_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="71dp" />

    <Button

        android:text="Cancel"
        android:textSize="20sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_button"
        android:layout_below="@+id/progressBar"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Dictionary Attack"
        android:id="@+id/activity_password_guessing_btn_dictionary"
        android:layout_width="wrap_content"

        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/activity_password_guessing_btn_bruteFroce"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        android:text="Brute Force"

        android:id="@+id/activity_password_guessing_btn_bruteFroce"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/activity_password_guessing_tv_eta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/activity_password_guessing_tv_eta"
        android:text="1 year"

        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_password_guessing_tv_etaIS"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
