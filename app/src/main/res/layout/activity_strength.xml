<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_strength"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.example.piyush.passwordhackingsystem.activities.StrengthActivity">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <android.support.v7.widget.CardView


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="STRENGTHS"
                            android:textColor="@android:color/holo_green_light"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Number of Characters "
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView

                                android:id="@+id/tv_strengths_numberofcharacters"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/holo_green_light"
                                android:text="num"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:text="Upper Case Letters "

                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView

                                android:id="@+id/tv_strengths_uppercaseletters"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/holo_green_light"
                                android:text="num"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lower Case Letters "
                                android:textSize="15sp"

                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_strengths_lowercaseletters"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="num"
                                android:textColor="@android:color/holo_green_light"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Numbers "
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_strengths_numbers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="num"
                                android:textColor="@android:color/holo_green_light"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:text="Symbols "
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_strengths_symbols"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/holo_green_light"
                                android:text="num"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:text="Middle Number Or Symbol "
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_strengths_midnumorsymbol"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:textColor="@android:color/holo_green_light"
                                android:text="num"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WEAKNESSES"
                            android:textColor="@android:color/holo_red_light"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:text="Letters Only "
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_weakness_lettersonly"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="num"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Numbers Only "
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_weakness_numbersonly"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="num"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Repeated Characters "
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_weakness_repeatchars"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="num"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Consecutive Upper "
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_consecutiveupper"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="num"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Consecutive Lower "
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_consecutivelower"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="num"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:text="Consecutive Numbers "
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_consecutivenumbers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="num"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:text="Sequential Letters(3+)  "
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_sequentialletters"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="num"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:text="Sequential Numbers(3+)  "
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_sequentialnumbers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="num"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.83"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password Score Is (%) "/>

                    <TextView

                        android:id="@+id/tv_strentghperc"
                        android:layout_width="wrap_content"
                        android:layout_height="57dp"

                        android:text="PERC %"

                        android:textSize="25sp" />
                </LinearLayout>


                <Button
                    android:id="@+id/btn_commonpass"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_common"
                    android:layout_alignBottom="@+id/tv_common"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"

                    android:text="IS MY PASSWORD COMMON?" />

                <TextView
                    android:id="@+id/tv_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_strentghperc"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/tv_strentghperc"

                    android:text="Yes/No"
                    android:textSize="20sp" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>



</FrameLayout>