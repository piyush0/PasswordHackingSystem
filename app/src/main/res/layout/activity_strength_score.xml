<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_strength_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.piyush.passwordhackingsystem.activities.StrengthScoreActivity">

    <com.example.piyush.passwordhackingsystem.ui.CustomProgressBar
        android:id="@+id/customProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

        android:id="@+id/activity_strength_score_tv_SCORE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/activity_strength_score_tv_score_is"
        android:paddingLeft="10dp"
        android:text="33"

        android:textSize="50dp" />

    <TextView
        android:id="@+id/activity_strength_score_tv_score_is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"


        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="YOUR SCORE IS : "
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/textView6"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/activity_strength_score_tv_SCORE"
        android:layout_toRightOf="@+id/activity_strength_score_tv_SCORE"
        android:text="%"
        android:textSize="50dp" />


    <Button

        android:id="@+id/activity_strength_score_btn_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="SEE DETAILS" />


    <TextView
        android:id="@+id/tv_common"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_strentghperc"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_strentghperc"
        android:text="Yguguy"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="gone"
        />

</RelativeLayout>
